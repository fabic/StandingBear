#<VirtualHost *:80>
<IfDefine DEFAULT_VHOST>
<VirtualHost *:${APACHE_ListenPort}>
	ServerAdmin ${APACHE_RUN_USER}@${APACHE_Hostname}

	#DocumentRoot "${APACHE_ServerRoot}/var/www/default"
	DocumentRoot "${APACHE_ServerRoot}/www"

    DirectoryIndex index.html index.cgi index.pl index.php index.xhtml index.htm
    #DirectoryIndex /_h5ai/server/php/index.php

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<Directory "${APACHE_ServerRoot}/www">
		Options Indexes FollowSymLinks MultiViews
		#AllowOverride None
		AllowOverride All
		#AllowOverride FileInfo
		Order allow,deny
		allow from all
	</Directory>

	ScriptAlias /cgi-bin/ "${APACHE_ServerRoot}/var/www/default/cgi-bin/"
	<Directory "${APACHE_ServerRoot}/var/www/default/cgi-bin/">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	#ErrorLog var/log/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	#LogLevel info

	#CustomLog var/log/access.log combined
</VirtualHost>
</IfDefine>
