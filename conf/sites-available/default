<IfDefine DEFAULT_VHOST>
<VirtualHost *:${APACHE_ListenPort}>
	ServerAdmin ${APACHE_RUN_USER}@${APACHE_Hostname}

	DocumentRoot "${APACHE_ServerRoot}/www/default/htdocs"
	#DocumentRoot "${APACHE_ServerRoot}/www"

    DirectoryIndex index.html index.cgi index.pl index.php index.xhtml index.htm
    #DirectoryIndex /_h5ai/server/php/index.php

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<Directory "${APACHE_ServerRoot}/www/default/htdocs">
		Options Indexes FollowSymLinks MultiViews
		#AllowOverride None
		AllowOverride All
		#AllowOverride FileInfo
		Order allow,deny
		allow from all
	</Directory>

	ScriptAlias /cgi-bin/ "${APACHE_ServerRoot}/www/default/cgi-bin/"
	<Directory "${APACHE_ServerRoot}/www/default/cgi-bin/">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

<IfDefine DAV>
	Alias /dav "${APACHE_ServerRoot}/www/default/dav/"
	<Directory "${APACHE_ServerRoot}/www/default/dav/">
		Options Indexes
		Order allow,deny

		Dav On

		AuthType Basic
		AuthName "DAV"
		AuthBasicProvider ldap1
		Require valid-user

		<LimitExcept GET OPTIONS>
			Require user admin
		</LimitExcept>
	</Directory>
</IfDefine>

	#ErrorLog var/log/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	#LogLevel info

	#CustomLog var/log/access.log combined
</VirtualHost>
</IfDefine>
# vim: ts=4 filetype=apache
