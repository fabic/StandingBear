# File: conf/sites-available/default

<IfDefine DEFAULT_VHOST>
<VirtualHost *:${APACHE_ListenPort}>
	ServerAdmin ${APACHE_RUN_USER}@${APACHE_Hostname}

	DocumentRoot "${APACHE_ServerRoot}/www/default/htdocs"
	#DocumentRoot "${APACHE_ServerRoot}/www"

    DirectoryIndex index.html index.cgi index.pl index.php index.xhtml index.htm
    #DirectoryIndex /_h5ai/server/php/index.php

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<Directory "${APACHE_ServerRoot}/www/default/htdocs">
		Options Indexes FollowSymLinks MultiViews
		#AllowOverride None
		AllowOverride All
		#AllowOverride FileInfo
		Order allow,deny
		Allow from all

        Include conf/vhost_authnz.include.conf
	</Directory>

	ScriptAlias /cgi-bin/ "${APACHE_ServerRoot}/www/default/cgi-bin/"
	<Directory "${APACHE_ServerRoot}/www/default/cgi-bin/">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

    # Ruby's powered stuff :
    <IfDefine PASSENGER>
        #RackBaseURI /app1
        #RackBaseURI /app2
        # Defaults to 'production' :
        #RailsEnv development
        RackBaseURI /rack
        <Directory "${APACHE_ServerRoot}/www/default/htdocs/rack">
            Options -MultiViews
        </Directory>
    </IfDefine>

<IfDefine DAV>
	Alias /dav "${APACHE_ServerRoot}/www/default/dav/"
	<Directory "${APACHE_ServerRoot}/www/default/dav/">
		Options Indexes
		Order allow,deny
		Allow from all

		Dav On

        Include conf/vhost_authnz.include.conf

		<LimitExcept GET OPTIONS>
			Require user admin
		</LimitExcept>
	</Directory>
</IfDefine>

    ## !!BEWARE!! FORWARD PROXY !
    Include conf/vhost_forward_proxy.include.conf

    ## MAINTENANCE MODE :
    Include conf/vhost_maintenance_mode.include.conf

    ## Left c/o as we're using the server-wide configuration at :
    ##    > conf/mods-enabled/log_config.conf (CustomLog ...)
    ##    > conf/httpd.conf (ErrorLog ...)

	#ErrorLog var/log/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	#LogLevel info

	#CustomLog var/log/access.log combined
</VirtualHost>
</IfDefine>
# vim: ts=4 filetype=apache
