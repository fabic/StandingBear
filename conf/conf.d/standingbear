# File: conf/conf.d/standingbear
#
# In here is defined the /_sb/ URI space is defined.
#
# Access control :
#    Note that it is "Deny from all" which is relaxed by :
#       Allow from env=let_me_in
#    *AND* conf/vhost_authnz.include.conf is included.
#
<IfDefine STANDINGBEAR>

    #
    # Expose configuration files under /_sb/conf/
    #
    Alias ${_SB}/conf "${APACHE_ServerRoot}/conf/"
    <Directory "${APACHE_ServerRoot}/conf/">
        Options Indexes FollowSymLinks
        AllowOverride None
        Order deny,allow
        Deny from all
        Allow from env=let_me_in
    </Directory>

    #
    # CGI-BINs
    #
    ScriptAlias ${_SB}/cgi-bin/ "${APACHE_ServerRoot}/www/_sb/cgi-bin/"
    <Directory "${APACHE_ServerRoot}/www/_sb/cgi-bin/">
        AllowOverride None
        Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order deny,allow
        Deny from all
        Allow from env=let_me_in
    </Directory>

    #
    # /_sb/
    #
    Alias ${_SB} "${APACHE_ServerRoot}/www/_sb/htdocs/"
    <Directory "${APACHE_ServerRoot}/www/_sb/htdocs/">
        Options Indexes SymLinksIfOwnerMatch
        AllowOverride All
        Order deny,allow
        Deny from all
        Allow from env=let_me_in
    </Directory>

    #
    # MAINTENANCE MODE ALIAS
    #
    Alias /maintenance-in-progress "${APACHE_ServerRoot}/www/_sb/htdocs/maintenance-in-progress/"
    <Directory "${APACHE_ServerRoot}/www/_sb/htdocs/maintenance-in-progress/">
        Options Indexes SymLinksIfOwnerMatch
        AllowOverride None
        Order allow,deny
        Allow from all
    </Directory>

    #
    # AuthN/Z
    #
    <Location ${_SB}>
        Include conf/vhost_authnz.include.conf
    </Location>
</IfDefine>
# vim: ts=4 filetype=apache
